generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Item{
  id String @id @default(cuid())
  name String 
  category String
  brand String
  color Color[]
  size Size[]
  description String
  dopInfo DopInfo[]
}

model DopInfo{
  id String @id @default(cuid())
  diagonal String?
  processor String?
  itemId String
  item Item  @relation(fields: [itemId], references: [id])
}


model Color{
  id String @id @default(cuid())
  name String
  itemId String
  item Item  @relation(fields: [itemId], references: [id])
}

model Size{
  id String @id @default(cuid())
  name String
  itemId String
  price Float
  item Item  @relation(fields: [itemId], references: [id])
}


